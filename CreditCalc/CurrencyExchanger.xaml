<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CreditCalc.CurrencyExchanger"
             Title="Курс валют">
    
    <ContentPage.Content>
        
        <StackLayout Orientation="Horizontal">
            
            <StackLayout Orientation="Vertical">
                
                <Label Text="Центробанк РФ:"/>
                
                <StackLayout Orientation="Horizontal">
                    <Label Text="USD" FontSize="Large"/>
                    <Entry x:Name="usdEntry" Placeholder="Введите курс доллара" TextChanged="USDChanged"/>
                </StackLayout>
                
                <StackLayout Orientation="Horizontal">
                    <Label Text="EUR" FontSize="Large"/>
                    <Label x:Name="eurLabel" Text="86.000" TextDecorations="Underline"/>
                </StackLayout>
                
            </StackLayout>
            
            <StackLayout Orientation="Vertical">
                <Label Text="GetText"/>
                <DatePicker/>
            </StackLayout>
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>